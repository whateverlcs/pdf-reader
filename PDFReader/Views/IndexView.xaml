<UserControl x:Class="PDFReader.Views.IndexView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:local="clr-namespace:PDFReader.Views"
             xmlns:helper="clr-namespace:PDFReader.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helper:SidebarIconConverter x:Key="SidebarIconConverter"/>
        <helper:StateToImageConverter x:Key="StateToImageConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Button Width="60" Height="40"
            x:Name="ToggleSidebar"
            ToolTip="Mostrar/Esconder Sidebar"
            Background="Transparent" BorderBrush="Transparent" Margin="5,0,0,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center">
                <materialDesign:PackIcon Width="25" Height="25"
                             Kind="{Binding IsSidebarVisible, Converter={StaticResource SidebarIconConverter}}"/>
            </Button>

            <Button x:Name="SelectFolder" Style="{StaticResource MaterialDesignFlatDarkBgButton}" Content="Selecionar Pasta com PDFs" Width="210" Height="40" Background="#F0F0F5" Foreground="#353535" BorderBrush="#353535" materialDesign:ButtonAssist.CornerRadius="6" Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVis}}" Margin="5 0 5 0" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"
            HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="700" Height="500">
                <Image.Source>
                    <MultiBinding Converter="{StaticResource StateToImageConverter}">
                        <Binding Path="IsInitialState"/>
                        <Binding Path="IsNotFound"/>
                    </MultiBinding>
                </Image.Source>
            </Image>
            <TextBlock Text="{Binding EmptyStateText, Mode=TwoWay}"
               Foreground="#353535" FontSize="30"
               HorizontalAlignment="Center" Margin="10" TextAlignment="Center"
               TextWrapping="Wrap" MaxWidth="600"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Arquivos Encontrados"
        Foreground="#353535" FontSize="17"
        HorizontalAlignment="Center" Margin="10" TextAlignment="Center" FontWeight="Bold" MaxWidth="600" Visibility="{Binding IsTitleItemsVisible, Converter={StaticResource BoolToVis}}"/>

        <ListBox Grid.Row="2" Grid.RowSpan="2" Grid.Column="0"
                 ItemsSource="{Binding PdfFiles}"
                 SelectedItem="{Binding SelectedPdf, Mode=TwoWay}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 DisplayMemberPath="FileName" FontSize="16" Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVis}}"/>

        <Border Grid.Row="0" Grid.RowSpan="5" Grid.Column="1">
            <wpf:WebView2 x:Name="PdfWebView"
                          Source="{Binding SelectedPdfUri, Mode=OneWay}"
                          Loaded="PdfWebView_Loaded" />
        </Border>
    </Grid>
</UserControl>
